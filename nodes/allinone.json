{
    "name": "localhost",
    "haproxy" : {
        "ec2" : {
            "query_tags" : {
                "stack-instance-id" : "@@STACK_NAME@@"
            },
            "box_tags" : {
                "haproxy-role" : "allinone",
                "stack-instance-id" : "@@STACK_NAME@@"
            }
        }
    },
    "artifact-deployer" : {
      "maven" : {
        "repositories" : {
          "private" : {
            "url" : "https://artifacts.alfresco.com/nexus/content/groups/private",
            "username" : "@@ARTIFACT_REPO_USERNAME@@",
            "password" : "@@ARTIFACT_REPO_PASSWORD@@"
          }
        }
      }
    },
    "nginx" : {
      "use_nossl_config" : true
    },
    "alfresco" : {
        "skip_certificate_creation" : true,
        "rmi_server_hostname" : "localhost",
        "public_hostname" : "@@FQDN@@",
        "public_protocol" : "http",
        "public_portssl" : "80",
        "log.json.enabled" : false,
        "version" : "5.0.2",
        "edition" : "enterprise",
        "components" : ["haproxy","nginx","tomcat","transform","repo","share","solr","aos"],
        "restart_services" : ["tomcat-alfresco","tomcat-share","tomcat-solr"],
        "shareproperties" : {
          "hz_aws_enabled" : true
        },
        "properties" : {
            "dir.license.external" : "/opt/alflicense",
            "s3.accessKey" : "@@AWS_ACCESS_KEY@@",
            "s3.secretKey" : "@@AWS_SECRET_KEY@@",
            "hz_aws_access_key" : "@@AWS_ACCESS_KEY@@",
            "hz_aws_secret_key" : "@@AWS_SECRET_KEY@@",
            "db.host" : "@@DB_HOST@@",
            "db.dbname" : "@@DB_NAME@@",
            "db.username" : "@@DB_USERNAME@@",
            "db.password" : "@@DB_PASSWORD@@",
            "db.prefix" : "mysql",
            "s3.bucketName" : "@@CONTENTSTORE_S3_BUCKET@@",
            "s3.bucketLocation" : "@@AWS_REGION@@",
            "s3.bucketRegion" : "@@AWS_REGION@@",
            "s3service.s3-endpoint" : "s3.@@AWS_REGION@@.amazonaws.com",
            "hz_aws_enabled" : true,
            "hz_aws_sg_name" : "@@AWS_SG_NAME@@",
            "hz_aws_tag_key" : "haproxy-role",
            "hz_aws_tag_value" : "share"
        },
        "repo_tomcat_instance" : {
            "xmx_ratio" : 0.5
        },
        "share_tomcat_instance" : {
            "xmx_ratio" : 0.5
        },
        "solr_tomcat_instance" : {
            "xmx_ratio" : 0.5
        },
        "workspace-solrproperties" : {
            "alfresco.corePoolSize" : 4
        }
    },
    "tomcat" : {
        "cleaner.minutes.interval" : 1
    },
    "run_list": ["alfresco::default"]
}
