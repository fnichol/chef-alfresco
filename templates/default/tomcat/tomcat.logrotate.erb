# Dynamically generated by Chef on <%= node["fqdn"] %>

<%= @tomcat_log_path %>/*.log {
	dateext
	copytruncate
	daily
	rotate 14
	compress
	missingok
  postrotate
    find <%= @tomcat_log_path %> -name \*.gz -mtime +10 | xargs -r rm
  endscript
}

<%= @tomcat_log_path %>/*.out {
  dateext
  copytruncate
  daily
  rotate 14
  compress
  missingok
  create 0644 tomcat tomcat
}

<%= @tomcat_log_path %>/gc.log {
  dateext
  copytruncate
  daily
  rotate 14
  compress
  missingok
  create 0644 tomcat tomcat
}
